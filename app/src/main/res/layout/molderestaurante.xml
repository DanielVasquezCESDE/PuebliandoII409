<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/lightcyan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="384dp">

        <TextView
            android:id="@+id/nombreresta1"
            android:layout_width="381dp"
            android:layout_height="70dp"

            android:paddingTop="12dp"
            android:paddingEnd="30dp"

            android:background="@color/lightcyan"
            android:gravity="center"
            android:shadowColor="@color/cadetblue"
            android:shadowDx="4"
            android:shadowDy="4"

            android:shadowRadius="5"
            android:text="Fonda restaurante DONDE AIDE"
            android:textAlignment="center"
            android:textSize="20dp"

            android:textStyle="bold"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <RatingBar
            android:id="@+id/valoracionMoldeResta"
            android:layout_width="239dp"
            android:layout_height="40dp"
            android:scaleX=".4"
            android:scaleY=".4"

            android:translationX="-50dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="52dp"

            android:src="@drawable/favoritoiconoresta"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imagenresta1"
            android:layout_width="380dp"
            android:layout_height="206dp"

            android:layout_marginBottom="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/resta1"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreresta1"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/rangoprecio"
            android:layout_width="108dp"
            android:layout_height="31dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#008A4949"
            android:paddingTop="14dp"
            android:text="Rango precio:"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagenresta1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/precios"
            android:layout_width="136dp"
            android:layout_height="38dp"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="#00F0F8FF"
            android:paddingTop="14dp"
            android:text="Desde COP 26000"
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toEndOf="@id/rangoprecio"
            app:layout_constraintTop_toBottomOf="@id/imagenresta1"
            app:layout_constraintVertical_bias="0.071" />

        <TextView
            android:id="@+id/contactos"
            android:layout_width="140dp"
            android:layout_height="31dp"

            android:background="#00F0F8FF"
            android:paddingTop="14dp"
            android:text="TelÃ©fonos:"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rangoprecio"
            app:layout_constraintVertical_bias="0.103" />

        <TextView
            android:id="@+id/numeroresta"
            android:layout_width="94dp"
            android:layout_height="34dp"

            android:layout_marginEnd="56dp"
            android:background="#00F0F8FF"
            android:paddingTop="14dp"
            android:text="3116026852"
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/precios"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/platorecom"
            android:layout_width="279dp"
            android:layout_height="56dp"

            android:layout_marginEnd="56dp"
            android:background="#00F0F8FF"
            android:gravity="center"
            android:padding="14dp"
            android:paddingStart="20dp"
            android:text="Plato recomendado:"
            android:textAlignment="center"
            android:textSize="18dp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactos"
            app:layout_constraintVertical_bias="0.636" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
