<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaHoteles">

    <ImageView
        android:id="@+id/imagenhotel1"
        android:layout_width="413dp"
        android:layout_height="322dp"

        android:scaleType="fitXY"
        android:src="@drawable/hotel1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nombrehotel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Monte horeb a 10 minutos de Medellin."
        android:textSize="18dp"
        android:background="#8F8E8E"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenhotel1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/preciohotel1"
        android:layout_width="170dp"
        android:layout_height="49dp"

        android:background="#21AC9F"
        android:text="COP 880.000"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"
        android:paddingTop="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/contactohotel1"
        android:layout_width="88dp"
        android:layout_height="49dp"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/contacto"
        android:textSize="14dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:background="#44C3B7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/numerocontactoHotel"
        android:layout_width="153dp"
        android:layout_height="49dp"

        android:text="3005066692"
        android:textSize="14dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:background="#89E4DC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

</androidx.constraintlayout.widget.ConstraintLayout>