<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/nombresitioaquí"
        android:layout_width="match_parent"
        android:layout_height="27dp"

        android:text="Nombre propio"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/imagensitio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imagensitio"
        android:layout_width="411dp"
        android:layout_height="396dp"

        android:scaleType="fitXY"
        android:src="@drawable/sitisref"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombresitioaquí"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/encargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/encargadositio"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nombrencargado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagensitio"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/nombrencargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Nombre encargado"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/encargado"
        app:layout_constraintTop_toBottomOf="@id/imagensitio"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/contactoEnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/telsitio"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numeroEnc"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/encargado"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/numeroEnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Numero"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toEndOf="@+id/contactoEnc"
        app:layout_constraintTop_toBottomOf="@id/nombrencargado"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rangoprecioSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/desdesitio"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/preciositio"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactoEnc"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/preciositio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Valor $"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toEndOf="@+id/rangoprecioSitio"
        app:layout_constraintTop_toBottomOf="@id/numeroEnc"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>